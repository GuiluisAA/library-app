<h1>Invitations</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>E-mail</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	{{#each model as |invitation|}}
		<tr>
			<th>{{invitation.id}}</th>
			<td>{{invitation.email}}</td>
			<td><button type="submit" class="btn btn-danger btn-invitation-delete" {{action "deleteIvitation" invitation}}>Delete</button></td>
		</tr>
	{{/each}}
	</tbody>
</table>